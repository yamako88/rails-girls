<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>date</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.created_at %></td>
        <% @idea = Idea.find(idea.id) %>
        <td><p><%= image_tag(@idea.picture_url, width: 150) if @idea.picture.present? %></p></td>
        <td><%= link_to 'Show', idea, class: [:btn, "btn-success"] %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea), class: [:btn, "btn-primary"] %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: [:btn, "btn-danger"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path, class: [:btn, "btn-info"] %>
